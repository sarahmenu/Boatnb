<div class="container">
  <div class="row">
    <div class="col">
      <h1>My boats</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-12 col-md-4">
        <div class="card-boat-homepage">
          <div class="card-trip my-2">
              <%= cl_image_tag boat.photo.key, height: 500, width: 400, crop: :fill  %>
              <div class="card-trip-infos">
                <div>
                  <p class= "text-truncate"> üßç‚Äç‚ôÇÔ∏è <%= boat.capacity %> persons </p>
                  <p class= "text-truncate"> ‚õµ Category : <%= boat.category %>  </p>
                  <h2> <%= boat.name %> </h2>
                  <p class= "text-truncate"> <%= boat.description %> </p>
                </div>
                <h2 class="card-trip-pricing"> <%= boat.price %>  <strong>‚Ç¨</strong> </h2>
                <%=  cl_image_tag boat.user.photo.key, class:'card-trip-user avatar-bordered'%>
              </div>
              <div>
              <%= link_to 'Create a new boat', new_boat_path, class:'m-1 btn btn-primary'%>
              <%= link_to 'Edit boat',  edit_owner_boat_path(boat), class:'m-1 btn btn-success'%>
              </div>
              <div>
                <%= link_to_if !boat.bookings.any?, 'Delete boat',  owner_boat_path(boat) , class:'m-2 btn btn-danger',  method: :delete, data:{ confirm: "Are you sure you want to delete this boat?"} %>
              </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
