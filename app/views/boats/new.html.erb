<div class="container p-5">
  <div class="row">
    <div class="col">
      <h1>Add a new boat :</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= simple_form_for([:owner, @boat]) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :location %>
        <%= f.input :category, collection: Boat::CATEGORIES, as: :radio_buttons%>
        <%= f.input :capacity %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
