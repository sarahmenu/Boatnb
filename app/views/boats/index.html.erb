<div class="container p-5">
  <div class="row text-center">
    <div class="col">
      <h1>Boats available at <strong><%= params[:location] %></strong></h1>
    </div>
  </div>
</div>
<div class="container p-5">
  <div class="row">
    <div class="col">
      <div style="width: 100%; height: 400px;margin:0 auto"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
<div class="container p-5">
  <div class="row">
      <% @boats.each do |boat| %>
      <div class="col-12 col-md-4">
        <div class="card-boat-homepage">
          <a href="<%= boat_path(boat) %>" class="link-dark text-decoration-none">
            <div class="card-trip my-2">
                <%= cl_image_tag boat.photo.key, height: 500, width: 400, crop: :fill  %>
                <div class="card-trip-infos">
                  <div>
                    <p class= "text-truncate"> üßç‚Äç‚ôÇÔ∏è <%= boat.capacity %> persons </p>
                    <p class= "text-truncate"> ‚õµ Category : <%= boat.category %>  </p>
                    <h2> <%= boat.name %> </h2>
                    <p class= "text-truncate"> <%= boat.description %> </p>
                  </div>
                  <h2 class="card-trip-pricing"> <%= boat.price %>  <strong>‚Ç¨</strong> </h2>
                  <%=  cl_image_tag boat.user.photo.key, class:'card-trip-user avatar-bordered'%>
                </div>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
