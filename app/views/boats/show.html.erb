
<div class="container main-container py-5">
  <div class="row details">
    <div class="col-sm-12 col">
      <div class="card-boat-show">
        <div class="card-trip p-5 bg-gray">
          <%= cl_image_tag @boat.photo.key %>
          <div class="card-trip-infos my-5">
            <div>
              <p>‚öì Location : <strong><%= @boat.location %></strong></p>
              <p>‚õµ Category :  <strong><%= @boat.category %></strong></p>
              <h1> <%= @boat.name %></h1>
              <p>üßç‚Äç‚ôÇÔ∏è <%= @boat.capacity %> persons </p>
              <p>üßë‚Äç‚úàÔ∏è Offered by <%= @boat.user.full_name  %>  </p>
            </div>
            <h2 class="card-trip-pricing"><%= @boat.price%> ‚Ç¨</h2>
            <%=  cl_image_tag @boat.user.photo.key, class:'card-trip-user avatar-bordered'%>
          </div>
          <p class="my-2"> <%= @boat.description %> </p>
          <div>
            <h2 class="my-2">Booking conditions:</h2>
            <p>This boat can be chartered any day of the week for one day or more.</p>
            <h2 class="my-2">Cancellation policy:</h2>
            <p>Cancellation conditions Moderate.</p>
            <p>Moderate: 70% refund up to 10 days before arrival, excluding service fees and commission.</p>
            <h2 class="my-3">Book this boat :</h2>
            <%= simple_form_for [@boat, @booking] do |f| %>
              <%= f.input :start_at, html5: true %>
              <%= f.input :end_at, html5: true %>
              <%= f.button :submit, "Book Now", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="map"style="width: 40%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" class="">
  </div>
</div>
