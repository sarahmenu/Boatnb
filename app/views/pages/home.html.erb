            <%= image_tag "photo-#{location}.jpg" , height: 200  %>
          <div class="card-img-overlay d-flex align-items-center justify-content-center">
            <h2 class="card-title align-middle font-weight-bold"> <%= link_to location, boats_path(location: location), class:'text-justify text-decoration-none text-white' %> </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
