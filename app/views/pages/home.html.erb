                    <h2> <%= boat.name %> </h2>
                    <p class= "text-truncate"> <%= boat.description %> </p>
                  </div>
                  <h2 class="card-trip-pricing"> <%= boat.price %>  <strong>‚Ç¨</strong> </h2>
                  <%=  cl_image_tag boat.user.photo.key, class:'card-trip-user avatar-bordered'%>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
